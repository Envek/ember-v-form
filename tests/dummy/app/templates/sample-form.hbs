<div class="col-md-12">
    <h2>Sample form</h2>
    {{#v-form model=model submitAction="submit"}}
        <fieldset>
            <div class="well">
                {{#v-form-group property="name"}}
                        <label class="col-lg-3 control-label">Enter your name</label>
                        <div class="col-lg-8">
                            {{input placeholder="Type your name or see an error" value=model.name class="form-control"}}
                        </div>
                {{/v-form-group}}
                {{#v-form-group property="text"}}
                        <label class="col-lg-3 control-label">Write a text</label>
                        <div class="col-lg-8">
                            {{textarea class="form-control" value=model.text rows="3" placeholder="If you type less than 10 characters, you'll see an error"}}
                        </div>
                {{/v-form-group}}
                {{#v-form-group property="favouriteColor"}}
                        <label class="col-lg-3 control-label">Pick a color</label>
                        <div class="col-lg-8">
                            {{col-pick-input placeholder="This better be a valid hex code!" class="form-control" value=model.favouriteColor colorScheme="default"}}
                        </div>
                {{/v-form-group}}
                {{#v-form-group property="favouriteNumber"}}
                        <label class="col-lg-3 control-label">Pick a number</label>
                        <div class="col-lg-8">
                            {{select-2 optionValuePath="id" content=numbers value=model.favouriteNumber placeholder="Don't leave this empty!"}}
                        </div>
                {{/v-form-group}}
                {{#v-form-group property="pill"}}
                    <label class="col-lg-3 control-label">Pill</label>
                    <div class="col-lg-8">
                        <div class="radio">
                            {{#radio-button value="red" groupValue=model.pill}}
                                Red pill
                            {{/radio-button}}
                        </div>
                        <div class="radio">
                            {{#radio-button value="blue" groupValue=model.pill}}
                                Blue pill
                            {{/radio-button}}
                        </div>
                        <div class="radio">
                            {{#radio-button value="green" groupValue=model.pill}}
                                Green pill
                            {{/radio-button}}
                        </div>
                    </div>
                {{/v-form-group}}
                {{#v-form-group property="accepted"}}
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <div class="checkbox">
                            <label>
                                {{input type="checkbox" checked=model.accepted}} I accept everything
                            </label>
                        </div>
                    </div>
                {{/v-form-group}}
                <div class="form-group">
                    <div class="col-lg-8 col-lg-offset-3">
                        {{#v-form-submit}}Submit{{/v-form-submit}}
                    </div>
                </div>
            </div>
        </fieldset>
    {{/v-form}}
</div>

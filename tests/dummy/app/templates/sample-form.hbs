    <h2>Model</h2>
    <div class="code-block">
        {{#em-snippet lang="javascript"}}
import DS from 'ember-data';
import Validator from '../mixins/model-validator';

export default DS.Model.extend(Validator, {
    name:            DS.attr('string'),
    text:            DS.attr('string'),
    pill:            DS.attr('string'),
    favouriteColor:  DS.attr('string'),
    favouriteNumber: DS.attr('number'),
    accepted:        DS.attr('boolean'),

    validations: {
        name: {
            presence: true
        },
        text: {
            length: {minimum: 10}
        },
        favouriteColor: {
            color: true
        },
        favouriteNumber: {
            inclusion: {in: [1, 2, 3, 4, 5, 6, 7, 8, 9]}
        },
        pill: {
            inclusion: {in: ['red', 'blue'], message: 'pill has to be either red or blue'}
        },
        accepted: {
            acceptance: true
        },
    }
});
